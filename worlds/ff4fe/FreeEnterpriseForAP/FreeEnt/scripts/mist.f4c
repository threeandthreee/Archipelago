// setup alt character Rydia fight

formation($DB)
{
    monsters {
        $C7 x 1   // Girl (alt)
        $CF x 1   // Titan   
    }
    calling
    arrangement $32
    can't run
    no gameover
    continue music
    character battle
    not floating enemies
    gfx bits 1
    cursor graph $23
}

monster($C7)   // was Zemus
{
    boss
    level 1
    hp 60000
    gp 0
    xp 0
    attack index $00
    defense index $60
    magic defense index $A0
    speed index $30
    drop index $00
    drop rate $00
    attack sequence $88
    gfx {
        // %crydia_slot monster_gfx_alt%
        size $4B
        palette $0B
        // %end%
        pointer $8000
    }
}

text(monster name $C7) {
// %crydia_slot monster_name_alt%
Caller
// %end%
}

// Hijack VFX 01 to do the same as RydiaBattle
// except with the other formation
msfpatch {
    .addr $00d879
    lda #$DB
    jmp $d2d5
}



