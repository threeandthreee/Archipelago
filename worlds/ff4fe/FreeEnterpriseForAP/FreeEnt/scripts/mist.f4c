// change flag behavior on trigger
eventcall($0C)
{
    if not #MistComplete, #fe_GotPackage:
        $30   //Mist events
    else:
        $00   //(no event)
}


// alter npcs for child rydia if randomizing
placement($01 4)  //#Mist
{
    // %crydia_slot npc1%
    npc #fe_DynamicNPC
    // %end%

    // set a palette in case this is a pig (under only-free-characters)
    palette 1
}

placement($53 0)  //#FieldOutsideMist
{
    // %crydia_slot npc1%
    npc #fe_DynamicNPC
    // %end%
}

event($30)  //Mist events
{
    consts(placement) {
        4   ChildRydia
        5   RydiaMom
    }
    // autodetected map #Mist
    music #None
    take item #Package

    p #ChildRydia toggle visible

    player move right
    pause 8
    message $A0   // "       Package opened"
    sound $7E
    batch 20 {
        screen flash
    }
    
    [#B #Rando_LoadWackySprite 0 0]
    pause 8

    sound #Whirl
    vfx #PackageOpen
    music #Destruction
    toggle tint $DF
    vfx #PackageBombs
    [#B #Objectives_Tick #objective.quest_burnmist]
    [#B #ResetNPCPalette]
    player face up
    pause 4
    player face right
    pause 4
    player face down
    pause 4
    player face right
    pause 4
    batch 3 {
        player move right
    }
    player face up
    pause 6

    batch 4 {
        player move up
    }
    batch 3 {
        player move up
    }
    batch 1 {
        player face right
    }

    batch 1 {
        p #ChildRydia face left
        player move right
    }
    player toggle turning
    batch 1 {
        player move right
        p #ChildRydia move right
    }
    player toggle turning

    player invisible

    [#B #Rando_LoadAxtorFashionCode #actor.CRydia]

    clear #Temp
    [#B #Rando_CheckCharacterAltVersion #actor.CRydia]
    [#B #If #Flag #flag.Result] {
        vfx $01  // hijacked to mean alt Rydia battle
        set #Temp
    }

    [#B #If #not_Flag #flag.Temp] {
        vfx #RydiaBattle
    }

    [#B #Rando_LoadAxtorFashionCode $00]

    consts(placement) {
        0   ChildRydia
    }
    load map #FieldOutsideMist at 15 14 facing down
    music #None
    toggle tint $00
    batch 1 {
        player lie down
        p #ChildRydia lie down
    }

    p #ChildRydia toggle visible
    player visible
    toggle screen fade
    clear status 
    restore hp
    restore mp
    pause 16
    batch 2 {
        screen blur
    }
    player bow head
    pause 8
    player face down
    pause 6
    player face left
    pause 4
    player face down
    pause 4
    player face right
    pause 8
    player move right
    player move right
    p #ChildRydia toggle visible
    set #CarryingAroundChildRydia
    player move right
    batch 5 {
        player move down
    }
    activate #MistMan   // all Mist NPCs have been consolidated into MistMan
    deactivate #Cid2
    deactivate #SleepingBubble1
    set #MistComplete

    [#B #PutEnterprise 104 118]
    [#B #SaveVehiclesFromMist]
    load map #Overworld at 103 119
    player face down
    music #Overworld
}

